<section class="press-releases-section">
  <div class="row">
    <div class="col">
      <div class="press-releases__wrapper mt-3">
        <div class="press-releases__header-wrapper px-3 py-2">
          <span class="press-releases__header-icon">
            <i class="fa fa-file-text-o"></i>
          </span>

          <span class="press-releases__header-text">PRESS RELEASES</span>
        </div>

        <div class="p-3">
          <div class="row">
            {{#foreach posts}}
            <div class="col-xs-12 col-sm-6 col-md-3 mb-2">
              {{> "post-card"}}
            </div>
            {{/foreach}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>